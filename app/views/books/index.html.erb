<h1> Tout les livres </h1><br>
<td><%= link_to "nouveau livre", new_book_url %></td><br>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to "Voir", book_path(book) %></td>
    </tr>
  <% end %>
</table>
